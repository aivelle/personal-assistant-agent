{
  "description": "AI-powered module for classifying user intent from natural language prompts",
  "input": {
    "user_prompt": "string"
  },
  "output": {
    "intent": "create | summarize | manage | remind | insight | suggest | retrieve | interact"
  },
  "steps": [
    {
      "name": "analyze_prompt",
      "action": "classify",
      "target": "user_prompt",
      "method": "semantic-intent-classification",
      "output": "intent"
    },
    {
      "name": "route_to_workflow",
      "action": "redirect",
      "input": "intent",
      "routes": {
        "create": "create.json",
        "summarize": "summarize.json",
        "manage": "manage.json",
        "remind": "remind.json",
        "insight": "insight.json",
        "suggest": "suggest.json",
        "retrieve": "retrieve.json",
        "interact": "interact.json"
      }
    }
  ]
}