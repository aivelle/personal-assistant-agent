{
  "_meta": {
    "description": "Create a new task in the user's Notion task database.",
    "intention": "create",
    "required_roles": [
      "title",
      "status",
      "due_date"
    ],
    "optional_roles": [
      "priority",
      "area",
      "project_relation"
    ]
  },
  "steps": [
    {
      "type": "ask",
      "role": "title",
      "prompt": "What is the task you want to create?"
    },
    {
      "type": "ask_if_missing",
      "role": "status",
      "prompt": "What is the current status of this task?"
    },
    {
      "type": "ask_if_missing",
      "role": "due_date",
      "prompt": "When is this task due?"
    },
    {
      "type": "ask_if_available",
      "role": "priority",
      "prompt": "Do you want to set a priority?"
    },
    {
      "type": "ask_if_available",
      "role": "area",
      "prompt": "Which area or tag should this task belong to?"
    },
    {
      "type": "ask_if_available",
      "role": "project_relation",
      "prompt": "Is this task related to a specific project?"
    },
    {
      "type": "confirm",
      "summary": true
    },
    {
      "type": "save_to",
      "destination": "notion.tasks"
    }
  ],
  "intent": "create.task"
}